<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallScreenActivity">


    <ImageView
        android:id="@+id/called_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        >

    </ImageView>

    <TextView
        android:id="@+id/called_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Username"
        android:textColor="#FFF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_horizontal">

    </TextView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calling..."
        android:textSize="30dp"
        android:layout_marginBottom="-50dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_above="@id/called_username">

    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/make_call"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="98dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone">

        </ImageView>

        <ImageView
            android:id="@+id/decline_call"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/txt"
            android:src="@drawable/cancel_call">

        </ImageView>

    </LinearLayout>





</RelativeLayout>